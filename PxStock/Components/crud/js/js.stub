$(document).ready(function(){

    if ($('#frmStore{{model}}').length > 0) {
        let rules = {
            name: {
                required: true,
                maxlength: 253
            }
        };
        PX.ajaxRequest({
            element: 'frmStore{{model}}',
            validation: true,
            script: '{{nameDown}}/{{uri}}',
            rules,
            afterSuccess: {
                type: 'inflate_reset_response_data',
            }
        });
    }

    if ($('#frmUpdate{{model}}').length > 0) {
        let rules = {
            name: {
                required: true,
                maxlength: 253
            }
        };
        PX.ajaxRequest({
            element: 'frmUpdate{{model}}',
            validation: true,
            script: '{{nameDown}}/{{uri}}/'+$("#patch_id").val(),
            rules,
            afterSuccess: {
                type: 'inflate_response_data',
            }
        });
    }

    if ($("#dt{{model}}").length > 0) {
        const {pageLang={}} = PX?.config;
        const {table={}} = pageLang;
        let col_draft = [
            {
                data: 'id',
                title: table?.id
            },
            /*{
                data: null,
                title: table?.serial,
                class: 'text-center',
                width: '200px',
                render: function (data, type, row) {
                    return `<input type="number" value="` + data.serial + `" class="form-control serial"><input type="hidden" value="` + data.id + `" class="form-control ids">`;
                }
            },*/
            {
                data: 'name',
                title: table?.name
            },

            {
                data: 'created_at',
                title: table?.created
            },

            {
                data: null,
                title: table?.action,
                class: 'text-end',
                render: function (data, type, row) {
                    return `<a href="${baseurl}{{nameDown}}/{{uri}}/${data.id}/edit" class="btn btn-outline-secondary btn-sm edit" title="Edit">
                        <i class="fas fa-pencil-alt"></i>
                    </a>`;
                }
            },
        ];
        PX.renderDataTable('dt{{model}}', {
            select: true,
            url: '{{nameDown}}/{{uri}}/list',
            columns: col_draft,
            pdf: [1, 2]
        });
    }
})

function dt{{model}}(table, api, op) {
    PX.deleteAll({
        element: "deleteAll{{model}}",
        script: "{{nameDown}}/{{uri}}/delete-list",
        confirm: true,
        api,
    });
    PX.updateAll({
        element: "updateAll{{model}}",
        script: "{{nameDown}}/{{uri}}/update-list",
        confirm: true,
        dataCols: {
            key: "ids",
            items: [
                {
                    index: 1,
                    name: "ids",
                    type: "input",
                    data: [],
                },
                {
                    index: 1,
                    name: "serial",
                    type: "input",
                    data: []
                }
            ]
        },
        api,
        afterSuccess: {
            type: "inflate_response_data"
        }
    });
    PX?.dowloadPdf({ ...op, btn: "download{{model}}Pdf", dataTable: "yes" })
    PX?.dowloadExcel({ ...op, btn: "download{{model}}Excel", dataTable: "yes" })
}
